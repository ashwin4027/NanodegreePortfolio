<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ashwin.nanodegreeportfolio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTitle"
        android:id="@+id/title"
        android:textSize="20dp"
        android:textColor="#050404"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonPopularMovies"
        android:id="@+id/buttonPopularMovies"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="#0083be" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonStockHawk"
        android:id="@+id/buttonStockHawk"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buttonPopularMovies"
        android:layout_centerHorizontal="true"
        android:background="#0083be" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonBuildItBigger"
        android:id="@+id/buttonBuildItBigger"
        android:layout_below="@+id/buttonStockHawk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#0083be" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonMakeYourAppMaterial"
        android:id="@+id/buttonMakeYourAppMaterial"
        android:layout_below="@+id/buttonBuildItBigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#0083be" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonGoUbiquitous"
        android:id="@+id/buttonGoUbiquitous"
        android:layout_below="@+id/buttonMakeYourAppMaterial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#0083be" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonCapstone"
        android:id="@+id/buttonCapstone"
        android:layout_below="@+id/buttonGoUbiquitous"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#0083be" />
</RelativeLayout>
